
public class implementation1 {
	public static void bubbleSort(int[] a) {
		int k = 0, counter = 0;
		while(counter != a.length - 1) {
			for(int c = 0; c < a.length - k - 1; c++) {
				if(a[c] > a[c + 1]) {
					int temp = a[c];
					a[c] = a[c + 1];
					a[c + 1] = temp;
				}
			}
			counter++;
			k++;
		}
	}
	public static void main(String[] args) {
		int[] a = {4,3,2,1};
		implementation1.bubbleSort(a);
		for(int i: a) {
			System.out.println(a + " ");
		}
	}
}
